@model Model.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1 class="text-center">Manejo de Clientes</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Editar Cliente</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="Crear" method="POST">
                    
                    <!-- Id del Usuario Como campo Oculto -->
                    <input type="hidden" asp-for="IdCliente"/>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Categoria" class="control-label"></label>
                        <input asp-for="Categoria" class="form-control" placeholder="Ingresa la categoría del Cliente" />
                        <span asp-validation-for="Categoria" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NombreCliente" class="control-label"></label>
                        <input asp-for="NombreCliente" class="form-control" placeholder="Ingresa el nombre del Cliente" />
                        <span asp-validation-for="NombreCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ApellidoCliente" class="control-label"></label>
                        <input asp-for="ApellidoCliente" class="form-control" placeholder="Ingresa el Apellido del Cliente" />
                        <span asp-validation-for="ApellidoCliente" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="bi bi-pencil-fill"></i> Editar</button>
                    </div>
                </form>
                <a asp-controller="Home" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>